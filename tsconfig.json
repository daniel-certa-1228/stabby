{
  "compilerOptions": {
      "target": "es5",
      "module": "es6",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "paths": {
          "@/*": ["src/*"]
      }
  },
  "include": [
      "assets/scripts/**/*"
  ]
}
